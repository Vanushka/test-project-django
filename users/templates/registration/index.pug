extends ../base.pug

block content
  body.text-center
    form#signup.form-signin
      h1 Cars
      h1.h3.mb-3.font-weight-normal Sign up
      label.sr-only(for='inputName') Name
      input#inputName.form-control(type='text', placeholder='Name', name="username", required='', autofocus='')
      label.sr-only(for='inputEmail') Email address
      input#inputEmail.form-control(type='email', placeholder='Email address', name="email", required='', autofocus='')
      label.sr-only(for='inputPassword') Password
      input#inputPassword.form-control(type='password', placeholder='Password', name="password", required='', autofocus='')
      label.sr-only(for='inputPassword') Password Confirm
      input#inputPassword.form-control(type='password', placeholder='Password Confirm', name="passwordconfirm", required='', autofocus='')
      .checkbox.mb-3
        a(href="{% url 'login' %}") I have an account
      {% csrf_token %}
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign up
      p.mt-5.mb-3.text-muted Â© 2017 - 2019
      style.
        .form-signin {
          width: 100%;
          max-width: 330px;
          padding: 15px;
          margin: 13% auto;
        }
        input {
          margin-bottom: 10px;
        }
endblock
